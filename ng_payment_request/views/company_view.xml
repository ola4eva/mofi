<?xml version="1.0" ?>
<openerp>
    <data>
        <record id='view_company_form_payment_request' model='ir.ui.view'>
            <field name='name'>res.company.form.payment.request</field>
            <field name='model'>res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//page[1]" position="after">
                    <page string="Payment Request">
                        <group>
                            <field name="max_amount" string="Limit"/>
                        </group>
                        <p class="oe_grey">
                        If the requested amount &gt; Limit, it needs the Financial Controller's approval.</p>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
